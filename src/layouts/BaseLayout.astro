---
import Footer from '../components/Footer.astro' // We will create this next
import Navigation from '../components/Navigation.astro'
import '../styles/global.css'

interface Props {
  title: string
  description?: string
  class?: string
}

const {
  title,
  description = 'Dispute-Aware Escrow Orchestration Engine',
  class: className,
} = Astro.props

const currentPath = Astro.url.pathname
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#09090b" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{title} | Clearhold</title>
  </head>
  <body
    class={'bg-bg-base text-text-primary antialiased selection:bg-indigo-500/30 selection:text-indigo-200 overflow-x-hidden ' +
      (currentPath.startsWith('/docs') ? 'bg-dots-soft' : '')}
  >
    <div class="relative flex min-h-screen flex-col">
      <!-- Background Effects -->
      <div
        class="fixed inset-0 z-[-1] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.1),rgba(255,255,255,0))]"
      >
      </div>

      <Navigation currentPath={currentPath} />

      <main class:list={['flex-1 w-full', className]}>
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
