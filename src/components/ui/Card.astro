---
interface Props {
  class?: string
  hover?: boolean
}

const { class: className, hover = true } = Astro.props
---

<div
  class:list={[
    'glass-panel rounded-xl p-6 transition-all duration-300 bg-zinc-900/40 border border-white/5',
    hover &&
      'hover:bg-zinc-800/60 hover:border-zinc-700 hover:shadow-xl hover:shadow-indigo-500/5 hover:-translate-y-1',
    className,
  ]}
>
  <slot />
</div>
