---
interface Props {
  class?: string
  hover?: boolean
}

const { class: className, hover = true } = Astro.props
---

<div
  class:list={[
    'glass rounded-sm p-6 transition-all duration-300',
    hover &&
      'hover:bg-white/[0.04] hover:border-white/10 hover:shadow-lg hover:shadow-indigo-500/5 hover:-translate-y-1',
    className,
  ]}
>
  <slot />
</div>
