---
interface Props {
  href?: string
  variant?: 'primary' | 'secondary' | 'ghost'
  size?: 'sm' | 'md' | 'lg'
  class?: string
  [key: string]: any
}

const { href, variant = 'primary', size = 'md', class: className, ...rest } = Astro.props

const variants = {
  primary: 'bg-zinc-50 text-zinc-950 hover:bg-zinc-200 shadow-lg shadow-zinc-50/10',
  secondary:
    'bg-zinc-800 text-zinc-50 border border-zinc-700 hover:bg-zinc-700 hover:border-zinc-600',
  ghost: 'text-zinc-400 hover:text-zinc-50 hover:bg-zinc-800/50',
}

const sizes = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-5 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
}

const baseStyles =
  'inline-flex items-center justify-center gap-2 rounded-md font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-zinc-50/20 disabled:opacity-50 disabled:pointer-events-none cursor-pointer'

const classes = [baseStyles, variants[variant], sizes[size], className].filter(Boolean).join(' ')

const Element = href ? 'a' : 'button'
---

<Element href={href} class={classes} {...rest}>
  <slot />
</Element>
