---
interface Props {
  href?: string
  variant?: 'primary' | 'secondary' | 'ghost'
  size?: 'sm' | 'md' | 'lg'
  class?: string
  [key: string]: any
}

const { href, variant = 'primary', size = 'md', class: className, ...rest } = Astro.props

const variants = {
  primary:
    'bg-gradient-to-r from-accent to-accent-hover text-bg-base hover:from-accent-hover hover:to-accent shadow-lg shadow-accent/20 hover:shadow-accent/30',
  secondary: 'glass text-white hover:bg-white/[0.08] hover:border-white/15',
  ghost: 'text-zinc-400 hover:text-white hover:bg-white/5',
}

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-5 py-2.5 text-sm',
  lg: 'px-7 py-3.5 text-base font-medium',
}

const baseStyles =
  'inline-flex items-center justify-center gap-2 font-bold font-mono transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500/30 disabled:opacity-50 disabled:pointer-events-none cursor-pointer rounded-full'

const classes = [baseStyles, variants[variant], sizes[size], className].filter(Boolean).join(' ')

const Element = href ? 'a' : 'button'
---

<Element href={href} class={classes} data-button {...rest}>
  <slot />
</Element>
