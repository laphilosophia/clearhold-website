---
interface Props {
  currentPath: string
}

const { currentPath } = Astro.props

const navItems = [
  { href: '/docs/mental-model', label: 'Mental Model' },
  { href: '/docs/quick-start', label: 'Quick Start' },
  { href: '/docs/api-reference', label: 'API Reference' },
  { href: '/docs/decision-engine', label: 'Engine' },
]

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/'
  return currentPath.startsWith(href)
}
---

<nav class="sticky top-0 z-50 w-full border-b border-white/5 bg-zinc-950/75 backdrop-blur-xl">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-6 lg:px-8">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 transition-opacity hover:opacity-80">
      <span class="text-2xl text-indigo-500">â¬¡</span>
      <span class="text-lg font-bold tracking-tight text-white">Clearhold</span>
    </a>

    <!-- Desktop Links -->
    <div class="hidden md:flex md:gap-x-8">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'text-sm font-medium transition-colors hover:text-white',
              isActive(item.href) ? 'text-indigo-400' : 'text-zinc-400',
            ]}>
            {item.label}
          </a>
        ))
      }
    </div>

    <!-- Mobile Menu Button (Simple Placeholder for now) -->
    <div class="flex md:hidden">
      <!-- You could add a mobile menu toggle here -->
    </div>

    <!-- CTA -->
    <div class="hidden md:flex">
      <a
        href="https://github.com/clearhold/engine"
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-full bg-white/10 px-4 py-1.5 text-xs font-semibold text-white transition-colors hover:bg-white/20"
      >
        GitHub v1.0.0
      </a>
    </div>
  </div>
</nav>
